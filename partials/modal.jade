  body
    nav(class="navbar")
      div(class="row")
        div(class="two columns")
          h2
            a(href="/")
              i(class="icon-left-open-big")
        div(class="ten columns pull_right")
          h2(class="nav-header-title")
            |modals

    div(class="row")
      h4(class="twelve columns")
        |default modal
      hr
    section(class="row")
      div(class="twelve columns")
        div(class="modal", id="modal1")
          div(class="content")
            a(class="close switch", gumby-trigger="|#modal1")
              i(class="icon-cancel")
            div(class="row")
              div(class="ten columns centered text-center")
                h2
                  |this is a modal
                p
                  |gumby modals are easy to make using toggles and switches
                p(class="btn primary medium")
                  a(href="#", class="switch", gumby-trigger="|#modal1")
                    |close modal

      p(class="btn primary medium")
        a(href="#", class="switch", gumby-trigger="#modal1")
          |open modal

    div(class="row")
      h4(class="twelve columns")
        |form modal
      hr
    section(class="row")
      div(class="twelve columns")
        div(class="modal", id="modal2")
          div(class="content")
            a(class="close switch", gumby-trigger="|#modal2")
              i(class="icon-cancel")
            div(class="row")
              div(class="ten columns centered text-center")
               h2
                | this a modal with a form
               ul
                li(class="field")
                  input(class="input", type="text", placeholder="text input")
                li(class="field")
                  input(class="input", type="email", placeholder="email input")
                li(class="field")
                  input(class="input", type="password", placeholder="password")
                li(class="field")
                  textarea(class="input textarea", placeholder="textarea")

                p(class="btn primary medium pull_left")
                  a(href="#", class="switch", gumby-trigger="|#modal2")
                    |close modal

      p(class="btn primary medium")
        a(href="#", class="switch", gumby-trigger="#modal2")
          |open modal


      
      
